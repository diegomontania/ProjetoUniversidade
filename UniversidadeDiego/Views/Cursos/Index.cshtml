@model IEnumerable<UniversidadeDiego.Models.Curso>

@{
    ViewData["Title"] = "Painel de Cursos";
}

<h1>Novo curso</h1>

<p>
    <a class="btn btn-success" asp-action="Create">Novo curso</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Creditos)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Creditos)
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.CursoID">Editar</a> |
                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.CursoID">Detalhes</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.CursoID">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
