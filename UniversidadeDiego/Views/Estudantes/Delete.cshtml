@model UniversidadeDiego.Models.Estudante

@{
    ViewData["Title"] = "Exclusão de alunos";
}

<h1>Delete</h1>

<p class="text-danger">@ViewData["ErrorMessage"]</p>

<h3>Tem certeza que deseja excluir este aluno?</h3>
<div>
    <h4>Estudante</h4>
    <hr />
    <dl class="row">
        <input type="hidden" asp-for="EstudanteID" />
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SobreNome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SobreNome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataMatricula)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataMatricula)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="EstudanteID" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> |
        <a class="btn btn-info" asp-action="Index">Voltar</a>
    </form>
</div>
